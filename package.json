{
  "name": "@digicatapult/sqnc-identity-service",
  "version": "2.0.138",
  "description": "Identity Service for SQNC",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run tsoa:build && swc ./src -d ./build --strip-leading-paths --copy-files",
    "test": "SWCRC=true NODE_ENV=test node --enable-source-maps ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/**/*.test.ts",
    "lint": "prettier -c ./src ./test ./migrations",
    "lint:fix": "npm run lint -- -w",
    "depcheck": "depcheck",
    "start": "NODE_ENV=production node build/index.js",
    "tsoa:build": "tsoa spec-and-routes",
    "tsoa:watch": "node --watch-path=./src ./node_modules/.bin/tsoa spec-and-routes",
    "dev": "SWCRC=true NODE_ENV=dev node --trace-warnings --import @swc-node/register/esm-register --enable-source-maps --watch-path=./src --watch-path=./build/swagger.json ./src/index.ts",
    "db:migrate": "node --import @swc-node/register/esm-register ./node_modules/.bin/knex migrate:latest",
    "coverage": "NODE_ENV=test node --import @swc-node/register/esm-register ./node_modules/.bin/c8 mocha --config ./test/mocharc.json ./test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/sqnc-identity-service.git"
  },
  "engines": {
    "node": "^20.x.x",
    "npm": "^10.x.x"
  },
  "keywords": [
    "SQNC"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/sqnc-identity-service/issues"
  },
  "homepage": "https://github.com/digicatapult/sqnc-identity-service#readme",
  "dependencies": {
    "@digicatapult/tsoa-oauth-express": "^0.1.69",
    "@polkadot/api": "^14.3.1",
    "@tsoa/runtime": "^6.5.1",
    "body-parser": "^2.0.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "express-prom-bundle": "^8.0.0",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "polkadot": "^1.0.0",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.5.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.1",
    "@swc/core": "^1.9.2",
    "@types/chai": "^5.0.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.17.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "c8": "^10.1.2",
    "chai": "^5.1.2",
    "concurrently": "^9.1.0",
    "depcheck": "^1.4.7",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.8.2",
    "pino-colada": "^2.2.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "supertest": "^7.0.0",
    "typescript": "^5.6.3"
  }
}
