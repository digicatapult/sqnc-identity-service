{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".src/",
            "paths": {
            "bn.js": ["@polkadot/util/bn/bn.js"]
        },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "build",
    "resolveJsonModule": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "test",
  ]
}
